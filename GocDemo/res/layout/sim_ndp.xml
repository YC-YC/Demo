<!-- Layout for the Phone app's IccNetworkDepersonalizationPanel. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@color/darker_gray"
    android:paddingEnd="20dip"
    android:paddingStart="20dip" >

	
    
    <LinearLayout
            android:id="@+id/entry_panel"
            android:orientation="horizontal"
            android:layout_width="920dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            
        <ImageButton android:id="@+id/bt_home"
                android:layout_gravity="center"
               android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sysbar_home" 
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="?android:attr/selectableItemBackground"/>
        
        <ImageButton android:id="@+id/bt_dialer"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_dialog_dialer"
                 android:background="?android:attr/selectableItemBackground"
                />

        <ImageButton  android:id="@+id/bt_call"
                android:layout_width="0px"
                  android:layout_weight="1"
                android:layout_height="match_parent"
                android:scrollHorizontally="true"
                android:src="@drawable/ic_call_log"
                 android:background="?android:attr/selectableItemBackground"/>

       
        <ImageButton android:id="@+id/bt_phone_contact"
                android:layout_width="0px"
                  android:layout_weight="1"
                android:layout_height="match_parent"
                 android:src="@drawable/ic_contacts"
                  android:background="?android:attr/selectableItemBackground"/>

       
        <ImageButton android:id="@+id/bt_phone_ring"
                android:layout_width="0px"
                android:layout_height="match_parent"
                  android:layout_weight="1"
                android:src="@drawable/ic_music" 
                 android:background="?android:attr/selectableItemBackground"/>


        <ImageButton android:id="@+id/bt_phone_nfc"
                android:layout_width="0px"
                  android:layout_weight="1"
                android:layout_height="match_parent"
                   android:src="@drawable/ic_bluetooth" 
                    android:background="?android:attr/selectableItemBackground"
               />
        
        <ImageButton android:id="@+id/bt_phone_settings"
                android:layout_width="0px"
                android:layout_height="match_parent"
                  android:layout_weight="1"
                android:src="@drawable/ic_settings"
                 android:background="?android:attr/selectableItemBackground"
              />
        
        <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_sysbar_back"
        android:gravity="right"
        android:background="?android:attr/selectableItemBackground" />
        
    </LinearLayout>
    
</RelativeLayout>
